/* pages/weixin/weixin.wxss */
page{
  height: 100%;
}

.scroll-view {
  height: 88%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  /* border:1rpx solid black; */
}

.scroll-item {
  display: flex;
  flex-direction: row;
  padding-top: 26rpx;
  padding-bottom: 10rpx;
  padding-left: 58rpx;
  padding-right: 20rpx;
  font-size: 35rpx;
  /* border:1rpx solid black; */
}

.lasttime{
  font-size: 23rpx;
  color: #707070;
  margin-bottom: 26rpx;
  padding-left: 108rpx;
  /* border:1rpx solid black; */
}

.item-text {
  margin-left: 50rpx;
  margin-right: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  /* border:1rpx solid black; */
}

.line {
  width: 100%;
  height: 1px;
  background: #c7c7c7;
}

.blank {
  width: 100%;
  height: 88%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  /* border:1rpx solid red; */
}

.calc{
  width: 100%;
  height: 4%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  /* border:1rpx solid black; */
}
.calc-text{
  font-size: 22rpx;
  color: blueviolet;
  margin: 0 50rpx;
}

.bottom{
  width: 100%;
  height: 8%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  /* border:1rpx solid black; */
}

.bottom-btn{
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  border-radius: 0;
  padding: 15rpx 0;
}

.bottom-btn-add{
  width: 50%;
  height: 100%;
  font-size: 26rpx;
  border-radius: 0;
  padding: 15rpx 0;
}