/* pages/weixin/weixin.wxss */
page{
  height: 100%;
}
.scroll-view {
  position: absolute;
  background-color: #fff;
}

.scroll-item {
  display: flex;
  flex-direction: row;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  padding-left: 58rpx;
  padding-right: 20rpx;
  font-size: 35rpx;
  /* border:1rpx solid black; */
}

.face-image {
  border: 1px solid #887d7d;
  width: 84rpx;
  height: 84rpx;
  border-radius: 10%;
}

.item-text {
  margin-left: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  /* border:1rpx solid black; */
}

.line {
  width: 100%;
  height: 1px;
  background: #c7c7c7;
}

.blank {
  height: 60%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: relative;
}